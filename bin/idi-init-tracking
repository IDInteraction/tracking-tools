docker run -it --rm --name=idi-init-tracking \
  --volume $1:/idinteraction/videos:ro \
  --volume $2:/idinteraction/output \
  --volume /tmp/.X11-unix:/tmp/.X11-unix \
  -e DISPLAY=unix$DISPLAY \
  idinteraction/object-tracking init
